    "version": "0.2.0",
    "configurations": [
      {
        "name": "riscv-debug",
        "type": "cppdbg",
        "request": "launch",
        "cwd": "${workspaceFolder}/${relativeFileDirname}",
        "program": "out/os.elf",
        "stopAtEntry": false,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb-multiarch",
        "miDebuggerServerAddress": "localhost:1234",
        "preLaunchTask": "qemu-run",
      },
    ]
  }